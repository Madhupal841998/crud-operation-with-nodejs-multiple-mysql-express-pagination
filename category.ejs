<!DOCTYPE html>
<html lang="en">

<head>
    <title>Document</title>
</head>

<body>
    <h1> Category List</h1>
    <table border="1" width="100%">
        <tr>
            <th>Category ID</th>
            <th>Category Name</th>
            <th>Actions</th>
        </tr>
        <% if(category.length > 0){ %>
            <% for(var i=0; i < category.length;i++){ %>
                <tr>
                    <td>
                        <%- category[i].categoryId %>
                    </td>
                    <td>
                        <%- category[i].categoryName %>
                    </td>
                    <td><a href="/delete-category?categoryId=<%-category[i].categoryId %>">Delete</a>
                        <a href="/update-category?categoryId=<%- category[i].categoryId %>">Update</a>
                    </td>
                </tr>

                <% } %>
                    <% }else{ %>
                        <h1>Data Not Found</h1>

                        <% } %>
    </table>
    <div>

        <% if(page> 1) { %> <a href="/category?page=<%=page-1%>">Before</a>
            <% } %>
                <% for(let i=iterator; i <=endingLink; i++) { %>
                    <% if(i===page) { %>
                        <a class="selectedLink" href="/category?page=<%=i%>">
                            <%=i%>
                        </a>
                        <% continue; %>
                            <% } %>
                                <a href="/category?page=<%=i%>">
                                    <%=i%>
                                </a>
                                <% } %>
                                    <% if(page < numberOfPages) { %> <a href="/category?page=<%=page+1%>">After</a>
                                        <% } %>
    </div>
    <button><a href="/table1insert">Return</a></button>

</body>

</html>